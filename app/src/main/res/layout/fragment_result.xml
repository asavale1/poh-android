<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dialog_layout">

    <RelativeLayout
        android:visibility="invisible"
        android:id="@+id/results_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e4d981"
        android:padding="10dp">

        <TextView
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question goes here"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"/>

        <co.digitaldavinci.pollsofhumanity.PieChart
            android:id="@+id/pie_chart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/question"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/yes_count"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="25% Yes"
            android:textColor="#fff"
            android:background="#117909"
            android:padding="10dp"
            android:gravity="center"
            android:layout_below="@id/pie_chart"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/no_count"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="75% No"
            android:textColor="#fff"
            android:background="#b11a12"
            android:padding="10dp"
            android:gravity="center"
            android:layout_below="@id/yes_count"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/loading_layout"
        android:background="#e4d981"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Waiting for results"
            android:textSize="20sp"
            android:textColor="#000"/>
    </RelativeLayout>

</RelativeLayout>