<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/green_9"
    android:padding="20dp"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/green_2"
        android:text="Enter your question"/>

    <EditText
        android:id="@+id/requested_question"
        android:layout_below="@id/title"
        android:inputType="textMultiLine"
        android:textColor="@color/green_2"
        android:textSize="20sp"
        android:textCursorDrawable="@null"
        android:textColorHint="@color/green_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_below="@id/requested_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_margin="5dp"
            android:id="@+id/accept"
            android:background="@drawable/yes_button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textColor="#117909"/>

        <Button
            android:layout_margin="5dp"
            android:id="@+id/decline"
            android:textColor="#b11a12"
            android:background="@drawable/no_button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp" />

    </LinearLayout>

</RelativeLayout>