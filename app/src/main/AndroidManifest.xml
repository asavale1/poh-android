<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.digitaldavinci.pollsofhumanity" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logox500"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="co.digitaldavinci.pollsofhumanity.BaseActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="co.digitaldavinci.pollsofhumanity.receiver.UpdateAlarmReceiver" />

        <receiver android:name="co.digitaldavinci.pollsofhumanity.receiver.RestartReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>
